// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  cpf String?
  cnpj String?
  image String?
  balance Int?
  password String
  isAdmin Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  products Product[]
}

model Product{
  id Int @id @default(autoincrement())
  name String
  description String?
  price Int
  idRestaurant Int
  restaurant User @relation(fields: [idRestaurant], references: [id])
}